%ul.purchases
  - @purchases.each do |purchase|
    %li.purchase
      .purchase_image
        = image_tag purchase.image_url, :class=>'purchase_thumb'
      .purchase_info
        .purchase_title= link_to purchase.title, purchase.link
        -# .purchase_description
        -#   = truncate purchase.description, :length=>300
        .purchase_price
          = purchase.price.to_money
          %span.purchase_rebate
            - if purchase.kind == 'rebate'
              (скидка
              = purchase.rebate_in_percents
              \%,
              экономия
              = purchase.rebate.to_money
              )
            - else
              ( экономия
              = purchase.rebate.to_money
              )
          %span.purchase_end_date
            до
            -# = distance_of_time_in_words purchase.end_date, Date.today
            = purchase.end_date.to_s
      .purchase_sidebar
        %span.purchase_rate_up &uarr;
        %span.purchase_rating 0
        %span.purchase_rate_down &darr;


%br

